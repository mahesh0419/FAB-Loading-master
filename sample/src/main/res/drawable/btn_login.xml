<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:endColor="#000000" android:startColor="#000000" />

            <stroke android:width="1dp" android:color="#000000" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:radius="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="90" android:endColor="@color/BTN_LOGIN" android:startColor="@color/BTN_LOGIN" />

            <stroke android:width="1dp" android:color="@color/BTN_LOGIN" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:radius="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="@color/BTN_LOGIN" android:startColor="@color/BTN_LOGIN" />

            <stroke android:width="1dp" android:color="@color/BTN_LOGIN" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:radius="10dp" />
        </shape></item>

</selector>